<div class="grid" ng-controller="grid">
    <div class="toolbar">
        <div class="tool">
            <label><span class="button" ng-click="del()"> 删 除 </span> </label>&nbsp;&nbsp;
        </div>
    </div>
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th><input type="checkbox"></th>
                    <th>序号</th>
                    <th>文件名</th>
                    <th>备份时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                {% for index, file in files %}
                <tr>
                    <td><input type="checkbox" ></td>
                    <td>{{ index+1 }}</td>
                    <td>{{ file['filename'] }}</td>
                    <td>{{ file['mtime'] }}</td>
                    <td><a href="{{ file['path'] }}">[ 下 载 ]</a>&nbsp;&nbsp;<a href="/system/delbackup/{{ file['filename'] }}">[ 删 除 ]</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
      {{ page }}
    </div>

</div>